{
  "name": "businesscatracing",
  "version": "1.0.0",
  "description": "A 3D kart racing game inspired by Super Mario Kart for SNES, featuring Business Cat and his corporate animal colleagues.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capnxtreme/BusinessCatRacing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/capnxtreme/BusinessCatRacing/issues"
  },
  "homepage": "https://github.com/capnxtreme/BusinessCatRacing#readme",
  "dependencies": {
    "cannon-es": "^0.20.0",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/three": "^0.178.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  }
}
